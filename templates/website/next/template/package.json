{
  "name": "website",
  "version": "0.0.1",
  "description": "website",
  "release-it": {
    "git": {
      "commit": false,
      "push": false,
      "tag": false
    },
    "github": {
      "release": false
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "npm run lint",
        "npm run markdownlint",
        "npm run build"
      ]
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "ts-standard": {
    "ignore": [
      ".next",
      ".lighthouseci",
      "node_modules",
      "**/public/workbox-*.js",
      "**/public/sw.js",
      "next-env.d.ts"
    ],
    "envs": [
      "node",
      "browser"
    ],
    "report": "stylish"
  },
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "build": "next build",
    "export": "next export",
    "markdownlint": "markdownlint '**/*.md' --dot --ignore node_modules",
    "lint": "ts-standard",
    "release": "release-it",
    "postinstall": "husky install"
  },
  "dependencies": {
    "next": "10.0.9",
    "next-pwa": "5.0.6",
    "normalize.css": "8.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@release-it/conventional-changelog": "2.0.1",
    "@styled-jsx/plugin-sass": "3.0.0",
    "@types/node": "14.14.35",
    "@types/react": "17.0.3",
    "@types/styled-jsx": "2.2.8",
    "husky": "5.2.0",
    "markdownlint-cli": "0.27.1",
    "release-it": "14.5.0",
    "sass": "1.32.8",
    "ts-standard": "10.0.0",
    "typescript": "4.2.3"
  }
}
