{
  "name": "api-fastify",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "cross-env NODE_ENV=production node build/index.js",
    "dev": "concurrently -k -n \"TypeScript,Node\" -p \"[{name}]\" -c \"blue,green\" \"tsc --watch\" \"cross-env NODE_ENV=development nodemon -e js,json,yaml build/index.js\"",
    "lint:commit": "commitlint",
    "lint:docker": "dockerfilelint './Dockerfile'",
    "lint:editorconfig": "editorconfig-checker",
    "lint:markdown": "markdownlint '*.md' --dot --ignore node_modules",
    "lint:typescript": "eslint '*.{js,ts,jsx,tsx}'",
    "lint:staged": "lint-staged",
    "test": "jest",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@prisma/client": "2.27.0",
    "@sinclair/typebox": "0.17.8",
    "dotenv": "10.0.0",
    "fastify": "3.19.1",
    "fastify-cors": "6.0.2",
    "fastify-helmet": "5.3.2",
    "fastify-plugin": "3.0.0",
    "fastify-rate-limit": "5.5.0",
    "fastify-sensible": "3.1.1",
    "fastify-swagger": "4.8.3",
    "fastify-url-data": "3.0.3",
    "socket.io": "4.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.4",
    "@commitlint/config-conventional": "12.1.4",
    "@types/jest": "26.0.24",
    "@types/node": "16.3.3",
    "@typescript-eslint/eslint-plugin": "4.28.3",
    "concurrently": "6.2.0",
    "cross-env": "7.0.3",
    "dockerfilelint": "1.8.0",
    "editorconfig-checker": "4.0.2",
    "eslint": "7.30.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard-with-typescript": "20.0.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "5.1.0",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "jest-mock-extended": "1.0.18",
    "lint-staged": "11.0.1",
    "markdownlint-cli": "0.27.1",
    "nodemon": "2.0.12",
    "prettier": "2.3.2",
    "prisma": "2.27.0",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.3",
    "typescript": "4.3.5"
  }
}
