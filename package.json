{
  "name": "create-fullstack-app",
  "version": "2.2.1",
  "description": "Create Fullstack TypeScript application with ease.",
  "main": "build/index.js",
  "bin": "build/index.js",
  "engines": {
    "node": ">=12"
  },
  "files": [
    "build",
    "templates"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Divlo/create-fullstack-app.git"
  },
  "keywords": [
    "cli",
    "fullstack",
    "template",
    "react",
    "next",
    "vue",
    "nuxt",
    "express",
    "sequelize",
    "strapi",
    "nest"
  ],
  "author": "Divlo <contact@divlo.fr>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Divlo/create-fullstack-app/issues"
  },
  "homepage": "https://github.com/Divlo/create-fullstack-app#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./__test__/setup.ts"
    ],
    "rootDir": "./src"
  },
  "ts-standard": {
    "files": [
      "./src/**/*.ts"
    ],
    "envs": [
      "node",
      "jest"
    ]
  },
  "scripts": {
    "build": "rimraf ./build && tsc",
    "dev": "tsc --watch",
    "start:dev": "node build/index.js app-test --only-website",
    "lint": "ts-standard | snazzy",
    "format": "ts-standard --fix | snazzy",
    "test": "jest",
    "test:watchAll": "jest --watchAll",
    "test:clearCache": "jest --clearCache",
    "prepare": "npm run build"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "child-process-promise": "^2.2.1",
    "commander": "^6.2.0",
    "directory-exists": "^2.0.1",
    "inquirer": "^7.3.3",
    "log-symbols": "^4.0.0",
    "make-dir": "^3.1.0",
    "ora": "^5.1.0",
    "replace-in-file": "^6.1.0",
    "tslib": "^2.0.3",
    "update-notifier": "^5.0.1",
    "validate-npm-package-name": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/child-process-promise": "^2.2.1",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.16",
    "@types/mock-fs": "^4.13.0",
    "@types/node": "^14.14.10",
    "@types/rimraf": "^3.0.0",
    "@types/update-notifier": "^5.0.0",
    "@types/validate-npm-package-name": "^3.0.2",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "mock-fs": "^4.13.0",
    "rimraf": "^3.0.2",
    "snazzy": "^9.0.0",
    "ts-jest": "^26.4.4",
    "ts-standard": "^9.0.0",
    "typescript": "^4.1.2"
  }
}
